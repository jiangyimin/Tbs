@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_LayoutWX.cshtml";
}

<div class="page input js_show">
    <div class="page__hd">
        <h1 class="page__title">用户登录</h1>
    </div>
    <div class="page__bd">
        <!-- <div class="weui-cells__title">用户登录</div> -->
        <div class="weui-cells weui-cells_form">
            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">用户编号</label></div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="number" pattern="[0-9]*" placeholder="请输入用户编号"/>
                </div>
            </div>
            <div class="weui-cell weui-cell_vcode">
                <div class="weui-cell__hd">
                    <label class="weui-label">手机号</label>
                </div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="tel" placeholder="请输入手机号"/>
                </div>
                <div class="weui-cell__ft">
                    <button class="weui-vcode-btn">获取验证码</button>
                </div>
            </div>
            <div class="weui-cell weui-cell_vcode">
                <div class="weui-cell__hd"><label class="weui-label">验证码</label></div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="number" placeholder="请输入验证码"/>
                </div>
                <div class="weui-cell__ft">
                    <img class="weui-vcode-img" src="~/images/vcode.jpg" />
                </div>
            </div>
        </div>
        <div class="weui-btn-area">
            <input class="weui-btn weui-btn_primary" type="button" value="确定" onclick="login()">
        </div>
    </div>
</div>

@section footer
{
    <script> 
        function login() {
            weui.toast('正在登录', 2000);
            window.location.href = "/WeixinCPG/Grids/jtya"
        }
    </script> 
}